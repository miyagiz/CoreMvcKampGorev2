@model IEnumerable<EntityLayer.Concreate.Comment>


<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Count() == 0)
    {
        <h2>Bu Blogda Henüz Yorum Yapılmadı.İlk Yorumu Siz Yazın</h2>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/CoreBlogTheme/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 style="float:left" class="mt-0">@item.CommentUserName</h5>
                    <h6 style="float:right">@(((DateTime)item.CommentDate).ToString("dd MMM yyyy"))</h6>
                    <p>
                        <br />
                        <br />
                        
                        @item.CommentContent 
                    </p>
                    
                </div>
            </div>
        }
    }

</div>